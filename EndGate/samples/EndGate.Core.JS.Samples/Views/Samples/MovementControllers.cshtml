@{
    ViewBag.SampleName = "Movement Controllers";
    Layout = "~/Views/Shared/_SamplesLayout.cshtml";
}

@section styles {
    <style>
        canvas {
            border: 1px solid black;
        }
    </style>
}

<div class="page-header section_header">
    <h3>@ViewBag.SampleName</h3>
    <p>Demonstrates how to use Movement Controllers to make moving objects easy.</p>
</div>

<p class="row">Move the box with <em>w/a/s/d or up/left/right/down.</em></p>
<p class="row">This show cases the LinearMovementController.  More MovementControllers will be added in the future.</p>

<div class="row">
    <div id="gameHolder" class="form-vertical well" style="height: 400px;">
    </div>
</div>

@section scripts {
    <script data-typescript="true" src="~/Content/Samples/MovementControllers/Game.js"></script>
    <script data-typescript="true" src="~/Content/Samples/MovementControllers/Main.js"></script>
}